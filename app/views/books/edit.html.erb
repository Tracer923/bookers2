<p id="notice"></p>
  <div class="container">
    
  <div id="error_explanation">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title, autofocus: true, id:"book_title", class:"form-control book_title"%>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, autofocus: true, id:"book_body", class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit "Update Book", class:"btn btn-success" %>
          </div>
        <% end %>
        <table>
          <tr>
              <td>
                <%= link_to "Show", book_path %>
              </td>
              <td>|</td>
              <td>
                <%= link_to "Back", books_path %>
              </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
